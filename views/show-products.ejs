<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 56px;
            background-color: #f4f6f9;
        }

        .navbar-brand img {
            height: 30px;
        }

        .card {
            width: 100%;
            max-width: 320px;
            /* Reduced width */
            height: 450px;
            /* Adjusted height */
            display: flex;
            flex-direction: column;
            margin: 15px;
            /* Added margin between cards */
            border-radius: 10px;
            /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            /* Subtle shadow */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            /* Lift effect */
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
            /* Stronger shadow on hover */
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            /* Rounded corners for image */
        }

        .card-body {
            padding: 20px;
            flex-grow: 1;
            /* Ensures that the body takes up remaining space */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            font-size: 0.9rem;
            color: #666;
            margin-top: 10px;
        }

        .card-footer {
            padding: 10px;
            background: #f8f9fa;
            border-top: 1px solid #e0e0e0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-footer a {
            text-decoration: none;
            font-size: 0.9rem;
            color: #007bff;
            transition: color 0.3s ease;
        }

        .card-footer a:hover {
            color: #0056b3;
            /* Darker color on hover */
        }

        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: calc(100vh - 200px);
            text-align: center;
        }

        .empty-state img {
            width: 300px;
            height: auto;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="https://via.placeholder.com/30" alt="Logo" class="me-2 rounded-circle">
                <span class="fw-bold">My Store</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-3">
                        <span class="text-muted me-2">Welcome,</span>
                        <h5 class="text-primary fw-bold d-inline m-0">
                            <%= owner %>
                        </h5>
                    </li>

                    <% if (locals.shop) { %>
                        <li class="nav-item me-3">
                            <span class="text-muted me-2">Shop Name:</span>
                            <h5 class="text-success fw-bold d-inline m-0">
                                <%= shop %>
                            </h5>
                        </li>
                        <% } %>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-success rounded-pill px-3 mx-2"
                                    href="/products/createproduct">
                                    <i class="bi bi-bag-plus me-1"></i>Add Product
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/api/auth/logout" class="btn btn-danger text-white rounded-pill px-4">
                                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                                </a>
                            </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4 py-4">
        <main>
            <% if (products && products.length> 0) { %>
                <h1 class="h2 my-4 text-center">All Products (<%= products.length %>)</h1>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    <% products.forEach(product=> { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <img src="<%= product.image ? 'data:image/jpeg;base64,' + product.image : 'https://via.placeholder.com/300' %>"
                                    class="card-img-top" alt="<%= product.name %>"
                                    onerror="this.src='https://via.placeholder.com/300'">

                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h6 text-primary mb-0">$<%= product.price.toFixed(2) %></span>
                                        <span class="badge bg-secondary">Qty: <%= product.quantity %></span>
                                    </div>
                                    <p class="card-text text-muted mt-2 small">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                                    <a href="/products/editproduct/<%= product._id %>"
                                        class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a href="/products/deleteproduct/<%= product._id %>"
                                        class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <div class="empty-state">
                        <img src="https://via.placeholder.com/300x200?text=No+Products" alt="No Products" class="mb-4">
                        <h2 class="text-muted">No Products Found</h2>
                        <p class="text-muted">Your Shop Is not Registered. Please Register First.</p>
                        <a href="/owners/addproduct" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i>Add Your First Product
                        </a>
                    </div>
                    <% } %>
        </main>
    </div>

    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>