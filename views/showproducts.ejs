<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 56px;
        }
        .navbar-brand img {
            height: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
    <div class="container-fluid">
        <!-- Brand Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="https://via.placeholder.com/30" alt="Logo" class="me-2 rounded-circle"> 
            <span class="fw-bold">Sample Logo</span>
        </a>

        <!-- Toggler for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <!-- Shop Name -->
                <li class="nav-item me-3">
                    <h5 class="text-primary fw-bold m-0"><%= owner %></h5>
                </li>
                
                <li class="nav-item me-3">
                    <h5 class="text-primary fw-bold m-0"><%= shop %></h5>
                </li>

                <!-- Navigation Links -->
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary rounded-pill px-3 mx-2" href="/owners/addnewshop">Add New Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-success rounded-pill px-3 mx-2" href="/owners/addproduct">Add Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-warning rounded-pill px-3 mx-2" href="contactus">Contact Us</a>
                </li>

                <!-- Logout Button -->
                <li class="nav-item">
                    <a href="/api/auth/logout" class="btn btn-danger text-white rounded-pill px-4">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


    <div class="container-fluid">
        <main class="px-3">
            <h1 class="h2 my-4 text-center">All Products</h1>
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text">Price: $<%= product.price %></p>
                                <p class="card-text text-muted"><%= product.description %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
