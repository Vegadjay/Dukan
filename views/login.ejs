<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SnapShop</title>
    <link rel="icon" type="image/x-icon" href="/Logo.webp">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
            animation: gradientBackground 6s ease infinite;
        }

        @keyframes gradientBackground {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .brand-highlight {
            color: #007bff;
            font-weight: bold;
        }

        .info-section {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn {
            transition: transform 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .info-section h5 {
            font-size: 1.2rem;
            text-align: center;
            margin-bottom: 10px;
        }

        .info-section ul {
            list-style-type: none;
            padding: 0;
        }

        .info-section li {
            margin: 5px 0;
            padding: 5px 0;
            border-bottom: 1px dashed #dee2e6;
        }
    </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="bg-white shadow rounded p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <img src="/Logo.webp" alt="SnapShop Logo" style="max-width: 100px; animation: fadeIn 1s;">
        </div>

        <!-- Business Name -->
        <h2 class="text-center mb-2">Welcome to <span class="brand-highlight">SnapShop</span></h2>
        <p class="text-center text-muted">Your one-stop platform for all your shopping needs.</p>

        <!-- Flash Messages -->
        <% if (successMessage && successMessage.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMessage[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if (errorMessage && errorMessage.length> 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= errorMessage[0] %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <!-- End Flash Messages -->

                        <h3 class="text-center mb-4">Login Options</h3>
                        <div class="d-grid gap-3">
                            <a href="/auth/pages/users/loginpage" class="btn btn-primary btn-lg w-100">
                                Login as Customer
                            </a>
                            <a href="/auth/pages/owner/loginpage" class="btn btn-success btn-lg w-100">
                                Login as Shop Owner
                            </a>
                        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', () => {
                btn.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)';
            });
            btn.addEventListener('mouseleave', () => {
                btn.style.boxShadow = 'none';
            });
        });
    </script>
</body>

</html>