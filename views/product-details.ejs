<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> - Product Details
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --bs-primary: #0d6efd;
            --bs-primary-rgb: 13, 110, 253;
        }

        body {
            background-color: #f8f9fa;
        }

        .product-image-container {
            position: relative;
            overflow: hidden;
            border-radius: 1rem;
            background-color: white;
        }

        .product-image {
            width: 100%;
            height: auto;
            transition: transform 0.3s ease;
        }

        .product-image:hover {
            transform: scale(1.05);
        }

        .wishlist-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.2s ease;
        }

        .wishlist-btn:hover {
            transform: scale(1.1);
        }

        .product-info {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            height: 100%;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        }

        .category-badge {
            background-color: #e9ecef;
            color: #495057;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .price {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--bs-primary);
        }

        .feature-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            text-align: center;
            transition: transform 0.3s ease;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 2rem;
            color: var(--bs-primary);
            margin-bottom: 1rem;
        }

        .rating {
            color: #ffc107;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }

        .quantity-badge {
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="row g-4">
            <!-- Product Image Section -->
            <div class="col-md-6">
                <div class="product-image-container">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                    <button class="wishlist-btn">
                        <i class="far fa-heart"></i>
                    </button>
                </div>
            </div>

            <!-- Product Info Section -->
            <div class="col-md-6">
                <div class="product-info">
                    <span class="category-badge mb-3 d-inline-block">
                        <%= product.category %>
                    </span>

                    <h1 class="h2 mb-3">
                        <%= product.name %>
                    </h1>

                    <div class="mb-3">
                        <span class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </span>
                        <span class="text-muted ms-2">(128 reviews)</span>
                    </div>

                    <div class="price mb-4">
                        <i class="fas fa-indian-rupee-sign"></i>
                        <%= parseInt(product.price).toLocaleString() %>
                    </div>

                    <p class="text-muted mb-4">
                        <%= product.description %>
                    </p>

                    <div class="d-flex align-items-center mb-4">
                        <span class="quantity-badge">
                            Available: <%= product.quantity %> units
                        </span>
                        <span class="ms-3 text-muted">
                            Shop: <%= product.shop %>
                        </span>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                        </button>
                        <a href="/products/payment/<%= productId %>" class="btn btn-outline-primary btn-lg">
                            Buy Now
                        </a>
                    </div>

                    <button class="btn btn-light w-100 mt-3">
                        <i class="fas fa-share-alt me-2"></i> Share Product
                    </button>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row mt-5 g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-truck feature-icon"></i>
                    <h4 class="h5 mb-2">Free Shipping</h4>
                    <p class="text-muted mb-0">On orders over â‚¹4999</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-shield-alt feature-icon"></i>
                    <h4 class="h5 mb-2">Secure Payment</h4>
                    <p class="text-muted mb-0">100% secure transactions</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-headset feature-icon"></i>
                    <h4 class="h5 mb-2">24/7 Support</h4>
                    <p class="text-muted mb-0">Round the clock assistance</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle wishlist button
        document.querySelector('.wishlist-btn').addEventListener('click', function () {
            const icon = this.querySelector('i');
            icon.classList.toggle('far');
            icon.classList.toggle('fas');
            icon.classList.toggle('text-danger');
        });
    </script>
</body>

</html>