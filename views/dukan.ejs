<%- include('./partials/header') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/Logo.webp">

    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

        .card-img-top {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            overflow: hidden;
        }

        .card-body {
            border-radius: 0 0 8px 8px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }

        .filter-link {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

        .filter-link:hover {
            text-decoration: underline;
        }

        .sidebar {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .sidebar h5 {
            font-weight: 600;
        }

        .sidebar .list-unstyled li {
            padding: 5px 0;
        }

        .no-products-message {
            text-align: center;
            color: #dc3545;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-name {
            font-size: 1rem;
            margin-right: 10px;
            font-weight: bold;
        }

        .logout-btn {
            color: #dc3545;
            text-decoration: none;
            font-weight: bold;
        }

        .logout-btn:hover {
            text-decoration: underline;
        }
    </style>

    <div class="container-fluid py-5">
        <div class="header">
            <h2>Shop</h2>
            <div class="user-info">
                <span class="user-name">Hello, <%= userName %>!</span>
                <a href="/api/auth/logout" class="logout-btn bg-danger w-50 text-white text-center rounded">Logout</a>
            </div>
        </div>
        <div class="row">
            <!-- Sidebar (Filter and Sort) -->
            <div class="col-md-3">
                <div class="sidebar">
                    <div class="mb-4">
                        <h4>Sort by</h4>
                        <form action="/users/shop" method="GET">
                            <select class="form-select" name="sortby" id="sortby" onchange="this.form.submit()">
                                <option value="popular">Popular</option>
                                <option value="newest">Newest</option>
                            </select>
                        </form>
                    </div>
                    <div class="mt-4">
                        <h5>Filter by:</h5>
                        <ul class="list-unstyled">
                            <li><a href="#" class="filter-link">New Collection</a></li>
                            <li><a href="#" class="filter-link">All Products</a></li>
                            <li><a href="#" class="filter-link">Discounted Products</a></li>
                        </ul>
                    </div>
                    <div class="mt-4">
                        <h5>Availability</h5>
                        <ul class="list-unstyled">
                            <li><a href="#" class="filter-link">In Stock</a></li>
                            <li><a href="#" class="filter-link">Out of Stock</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main Product Grid -->
            <div class="col-md-9">
                <div class="row">
                    <% if (products.length> 0) { %>
                        <% products.forEach(function(product) { %>
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-img-top bg-light d-flex justify-content-center align-items-center"
                                        style="height: 200px;">
                                        <img class="img-fluid"
                                            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                            alt="<%= product.name %>">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= product.name %>
                                        </h5>
                                        <p class="card-text">â‚¹ <%= product.price %>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="ri-add-line"></i> Add to Cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12">
                                        <h2 class="no-products-message">No products available in the list</h2>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <%- include('./partials/footer') %>