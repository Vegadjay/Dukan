<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/Logo.webp">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 15px;
        }

        .card-header {
            border-radius: 15px 15px 0 0;
        }

        .btn-danger {
            width: 200px;
        }

        .btn-secondary {
            width: 200px;
        }

        .card-body p {
            font-size: 1.2em;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white text-center">
                <h4>Confirm Deletion</h4>
            </div>
            <div class="card-body">
                <p class="text-center">Are you sure you want to delete this product?</p>

                <form id="deleteForm" class="text-center" method="POST">
                    <input type="hidden" name="productId" id="productId" value="<%= productId %>">
                    <input type="hidden" name="_method" value="DELETE">

                    <div class="form-check d-flex justify-content-center mb-4">
                        <input type="checkbox" class="form-check-input" id="confirmCheck" name="confirmCheck" required>
                        <label class="form-check-label ms-2" for="confirmCheck">
                            I understand that this action cannot be undone.
                        </label>
                    </div>

                    <button type="submit" class="btn btn-danger">Delete Product</button>
                    <a href="/owners/products" class="btn btn-secondary ms-3">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('deleteForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const productId = document.getElementById('productId').value;

            if (!document.getElementById('confirmCheck').checked) {
                alert("Please confirm the deletion.");
                return;
            }

            try {
                const response = await fetch(`/products/deleteproduct/${productId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId: productId }),
                });

                if (response.ok) {
                    window.location.href = '/owners/products';
                } else {
                    window.location.href = '/error';
                }
            } catch (error) {
                console.error('Error:', error);
                alert("An error occurred. Please try again.");
                window.location.href = '/error';
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>