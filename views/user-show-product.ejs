<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="icon" type="image/x-icon" href="/Logo.webp">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css"
        rel="stylesheet">

    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
        }

        .navbar {
            border-bottom: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar .nav-link {
            color: #333;
        }

        .navbar .nav-link:hover {
            color: #007bff;
        }

        .logout-btn {
            margin-left: auto;
            color: #dc3545;
            font-weight: bold;
            border: 1px solid #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .logout-btn:hover {
            background-color: #dc3545;
            color: #fff;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            background-color: #ffffff;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

        .card-img-top {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            overflow: hidden;
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .sidebar {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .sidebar h4 {
            margin-bottom: 20px;
        }

        .sidebar a {
            display: block;
            margin-bottom: 10px;
            color: #007bff;
            text-decoration: none;
        }

        .sidebar a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/path-to-logo.png" alt="Logo" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cart <i class="bi bi-cart"></i></a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">Hello, <%= userName %>!</span>
                    </li>
                </ul>
                <a href="/api/auth/logout" class="logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="main-content">
            <!-- Sidebar -->
            <div class="sidebar">
                <h4>Categories</h4>
                <a href="#">All Products</a>
                <a href="#">New Arrivals</a>
                <a href="#">Best Sellers</a>
                <a href="#">Discounted Items</a>
            </div>

            <!-- Main Content Area -->
            <div class="content-area">
                <div class="product-grid">
                    <% if (products.length> 0) { %>
                        <% products.forEach(function(product) { %>
                            <div class="card">
                                <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                    alt="<%= product.name %>" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <p class="card-text">â‚¹ <%= product.price %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="#" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </a>
                                        <a href="#" class="btn btn-primary btn-sm">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12">
                                        <h2 class="no-products-message">No products available in the list</h2>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>