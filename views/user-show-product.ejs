<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="icon" type="image/x-icon" href="/Logo.webp">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css"
        rel="stylesheet">

    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
        }

        .navbar {
            border-bottom: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar .nav-link {
            color: #333;
        }

        .navbar .nav-link:hover {
            color: #007bff;
        }

        .logout-btn {
            margin-left: auto;
            color: #dc3545;
            font-weight: bold;
            border: 1px solid #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .logout-btn:hover {
            background-color: #dc3545;
            color: #fff;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            /* Responsive grid for better layout */
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            color: #555;
        }

        .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .no-products-message {
            font-size: 1.25rem;
            text-align: center;
            color: #777;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/Logo.webp" alt="Logo" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <a href="/api/auth/logout" class="logout-btn">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="main-content">
            <!-- Main Content Area -->
            <div class="content-area">
                <div class="product-grid">
                    <% if (products.length> 0) { %>
                        <% products.forEach(function(product) { %>
                            <div class="card">
                                <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                    alt="<%= product.name %>" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <p class="card-text">â‚¹ <%= product.price %>
                                    </p>
                                    <div class="btn-group">
                                        <a href="/products/payment" class="btn btn-primary btn-sm">
                                            <i class="bi bi-basket3-fill"></i> Shop Now
                                        </a>
                                        <a href="/products/productdetails/<%= product._id %>"
                                            class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-info-circle-fill"></i> Know More
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12">
                                        <h2 class="no-products-message">No products available in the list</h2>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>