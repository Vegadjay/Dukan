<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h1 class="h4 text-center text-primary mb-4">Register Your Shop</h1>

                        <!-- Success Message -->
                        <% if (successMessage && successMessage.length > 0) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= successMessage %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <!-- Error Message -->
                        <% if (errorMessage && errorMessage.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= errorMessage %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <!-- Shop Registration Form -->
                        <form action="/add-shop" method="POST">
                            <!-- Owner ID -->
                            <div class="mb-3">
                                <label for="ownerId" class="form-label">Owner ID</label>
                                <input type="text" id="ownerId" name="ownerId" class="form-control" placeholder="Enter your Owner ID" required>
                            </div>

                            <!-- Shop Name -->
                            <div class="mb-3">
                                <label for="shopName" class="form-label">Shop Name</label>
                                <input type="text" id="shopName" name="shopName" class="form-control" placeholder="Enter Shop Name" required>
                            </div>

                            <!-- Shop Address -->
                            <div class="mb-3">
                                <label for="shopAddress" class="form-label">Shop Address</label>
                                <input type="text" id="shopAddress" name="shopAddress" class="form-control" placeholder="Enter Shop Address" required>
                            </div>

                            <!-- Product List -->
                            <div id="product-list">
                                <h5 class="text-secondary mt-4">Products</h5>

                                <div class="product-item mb-3">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="text" name="products[0][name]" class="form-control" placeholder="Product Name" required>
                                        </div>
                                        <div class="col-3">
                                            <input type="number" name="products[0][price]" class="form-control" placeholder="Price" required>
                                        </div>
                                        <div class="col-3">
                                            <input type="number" name="products[0][quantity]" class="form-control" placeholder="Quantity" required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Add Another Product Button -->
                            <div class="mb-3">
                                <button type="button" id="add-product-btn" class="btn btn-secondary w-100">Add Another Product</button>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary w-100">Register Shop</button>
                        </form>

                        <!-- Redirect to Dashboard -->
                        <p class="text-center mt-3 text-muted">
                            Go back to <a href="/dashboard" class="text-primary">Dashboard</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
